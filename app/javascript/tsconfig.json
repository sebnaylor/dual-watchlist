{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true, // Allow JavaScript files to be compiled
    "checkJs": true, // Check JavaScript files for errors
    "noEmit": true, // Do not emit output files
    "isolatedModules": true, // Ensure each file can be safely transpiled without relying on other imports
    "resolveJsonModule": true // Allow importing JSON files
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "dist" // Exclude the output directory
  ]
}
